---
layout: none
limit: 10
---
[
{%- assign latest_posts = site.posts | where_exp: "post", "post.categories contains 'writing'" -%}
{%- for post in latest_posts limit: page.limit -%}
{
"title":"{{ post.title }}",
"date":"{{ post.date | date: "%B %d, %Y" }}",
"excerpt":"{{ post.excerpt | markdownify | strip_html | strip | truncatewords: 50 }}"
}{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
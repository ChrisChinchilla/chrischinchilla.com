<Layout title="Welcome to Astro.">
  <main>
    <h1>Links</h1>
      {
        links.map((link) => (
          <>
            <Link
              title={link.resolved_title}
              description={link.excerpt}
              link={link.resolved_url}
              featured_image={link.top_image_url}
            />
          </>
        ))
      }
  </main>
</Layout>

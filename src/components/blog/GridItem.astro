---
import { Image } from 'astro:assets';
import { BLOG } from '~/config.mjs';
import type { Post } from '~/types';
import defaultPostImage from '/src/assets/images/defaults/blog-chinchilla.jpg';

import { getPermalink } from '~/utils/permalinks';
import { Debug } from 'astro:components';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
// What sort of URL
var url = '';
if (post.publication_url != null) {
  url = post.publication_url;
} else {
  // TODO: Better way? Why is the slug wrong?
  url = `blog${getPermalink(post.id, 'post')}`.replace('.md', '');
}
---

<!-- TODO: Add body -->
<article class="mb-6 transition px-4">
  <div class="relative md:h-40 max-w-6xl mx-auto rounded drop-shadow-lg mb-6">
    {
      post.image && (
        <Image
          src={post.image ? post.image : defaultPostImage}
          alt={post.title}
          class="absolute object-contain h-full mb-6 rounded drop-shadow-lg"
        />
      )
    }
  </div>
  <h3 class="mb-2 text-xl leading-tight sm:text-2xl font-heading font-semibold">
    {
      BLOG?.post?.disabled ? (
        post.title
      ) : (
        <a
          href={url}
          rel="canonical"
          class="hover:text-primary-800 dark:hover:text-primary-700  transition ease-in duration-200"
        >
          {post.title}
        </a>
      )
    }
  </h3>
</article>

---
import Icon from 'astro-icon';
import { Picture } from '@astrojs/image/components';
// import PostTags from '~/components/common/Tags.astro';
import { CollectionEntry } from 'astro:content';

import { BLOG } from '~/config.mjs';
// import type { Post } from '~/types';

import { getPermalink } from '~/utils/permalinks';
import { findImage } from '~/utils/images';
import { getFormattedDate } from '~/utils/utils';

export interface Props {
  post: CollectionEntry<"post">;
  publication_url: string;
  title: string;
  image: string;
  publishDate: Date;
}

const { post, publication_url, title, image, publishDate } = Astro.props;
const { Content } = await post.render();

// const { Content } = await post.Content;

const featured_image = await findImage(image);
// What sort of URL
var link = "";
if (publication_url != null) {
  link = publication_url;
} else {
   link = !BLOG?.post?.disabled ? getPermalink(publication_url, 'post') : '';
}
---

<article class={`max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 ${image ? 'md:grid-cols-2' : ''}`}>
  {
    image && (
    <a class="relative block group" href={link ?? 'javascript:void(0)'}>
        <div class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-72 lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded shadow-lg">
          {image && (
            <Picture
              src={featured_image}
              class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400 dark:bg-slate-700"
              widths={[400, 900]}
              sizes="(max-width: 900px) 400px, 900px"
              alt={title}
              aspectRatio="16:9"
            />
          )}
        </div>
      </a>
    )
  }
  <div class="mt-2">
    <header>
      <div class="mb-1">
        <span class="text-sm">
          <Icon name="tabler:clock" class="w-3.5 h-3.5 inline-block -mt-0.5 text-gray-500 dark:text-gray-400" />
          <time datetime={String(publishDate)}>{getFormattedDate(publishDate)}</time>
        </span>
      </div>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
        {
          link ? (
            <a class="hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={link}>
              {title}
            </a>
          ) : (
            title
          )
        }
      </h2>
    </header>

    <Content />
    <!-- {post.excerpt && <p class="flex-grow text-gray-500 dark:text-slate-400 text-lg">{post.excerpt}</p>} -->
    <!-- <footer class="mt-5">
      <PostTags tags={post.tags} />
    </footer> -->
  </div>
</article>

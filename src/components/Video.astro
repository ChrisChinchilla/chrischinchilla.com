---
import { YouTube } from "@astro-community/astro-embed-youtube";

export interface Props {
  name: string;
  snippet: string;
  id: string;
}

const { name, snippet, id } = Astro.props;
var url = `https://youtu.be/${id}`;
---

<article class="max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 md:grid-cols-2">

  <div class="relative h-0 pb-[56.25%] md:pb-[75%] lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded drop-shadow-lg">

    <YouTube id={id} />
</div>
  
    <div class="mt-2">
      <header>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
        {
          url ? (
            <a class="hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={url}>
              {name}
            </a>
          ) : (
            name
          )
        }
      </h2>
      </header>
      <p>
        {snippet}
      </p>
    </div>

</article>

---

<article class={`max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 ${client.data.image ? 'md:grid-cols-2' : ''}`}>
  <div
    class="relative h-0 pb-[56.25%] md:pb-[75%] lg:pb-[56.25%] overflow-hiddenrounded drop-shadow-lg"
  >
    <!-- <Picture
      src={featured_image ? featured_image : '~/assets/images/default.png'}
      class="absolute inset-0 object-cover w-full h-full mb-6 rounded drop-shadow-lg"
      widths={[450, 900]}
      sizes="(max-width: 900px) 450px, 900px"
      alt={client.data.title}
      aspectRatio="16:9"
      loading="lazy"
      decoding="async"
      fetchpriority="auto"
    /> -->
    <Image src={client.data.image} alt={client.data.title}       class="absolute inset-0 object-cover w-full h-full mb-6 rounded drop-shadow-lg"
    />
  </div>
  
    <div class="mt-2">
      <header>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
        {
          client.data.company_url ? (
            <a class="hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={client.data.company_url}>
              {client.data.name}
            </a>
          ) : (
          client.data.name
          )
        }
      </h2>
      </header>
      <!-- TODO: Seems kind of ridiculous -->
      <Markdown of={client.body} />
    </div>
</article>
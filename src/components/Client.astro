---
import { Picture } from "@astrojs/image/components";
import { findImage } from '~/utils/images';

export interface Props {
  company_url: string;
  name: string;
  image: string;
  body: string;
}

const { company_url, name, image, body } = Astro.props;
const featured_image = await findImage(image);

// Truncate text
// TODO: Better way?
// TODO: Make to helper or plugin
// var truncatedText = body.split("</p>");
---

<article class={`max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 ${image ? 'md:grid-cols-2' : ''}`}>
  <div class="relative h-0 pb-[56.25%] md:pb-[75%] lg:pb-[56.25%] overflow-hidden bg-gray-400 dark:bg-slate-700 rounded shadow-lg">

    <Picture
    src={featured_image}
    class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-gray-400 dark:bg-slate-700"
    widths={[400, 900]}
    sizes="(max-width: 900px) 400px, 900px"
    alt={name}
    aspectRatio="16:9"
  />
</div>
  
    <div class="mt-2">
      <header>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
        {
          company_url ? (
            <a class="hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={company_url}>
              {name}
            </a>
          ) : (
            name
          )
        }
      </h2>
      </header>
      <p>
        {body}
      </p>
    </div>

</article>
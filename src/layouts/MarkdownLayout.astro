---
import Layout from '~/layouts/BaseLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';
import SupportBlock from '~/components/SupportBlock.astro';
import type { MetaSEO } from '~/types';
import { extractFirstImage } from '~/utils/images';
import { getImage } from 'astro:assets';
import defaultPostImage from '~/assets/images/defaults/blog-chinchilla.jpg';

export interface Props {
  frontmatter?: any;
  rawContent?: string;
}

const { frontmatter, rawContent } = Astro.props;

// Determine which image to use for metadata
let metaImage = frontmatter?.image;

// If no image in frontmatter and we have content, try to extract first image
if (!metaImage && rawContent) {
  const firstImage = extractFirstImage(rawContent);
  if (firstImage) {
    // Convert relative paths starting with ../../../assets to ~/assets
    if (firstImage.startsWith('../../../assets/')) {
      metaImage = firstImage.replace('../../../assets/', '~/assets/');
    } else if (firstImage.startsWith('/src/assets/')) {
      metaImage = firstImage.replace('/src/assets/', '~/assets/');
    } else {
      metaImage = firstImage;
    }
  }
}

// If still no image, use default
if (!metaImage) {
  metaImage = defaultPostImage;
}

// Process the image for metadata
let processedImage;
if (typeof metaImage === 'string' && (metaImage.startsWith('http://') || metaImage.startsWith('https://'))) {
  processedImage = metaImage;
} else {
  try {
    processedImage = await getImage({
      src: metaImage,
      alt: frontmatter?.title || 'Blog post image',
      width: 1200,
      height: 628,
    });
  } catch (e) {
    // If image processing fails, use default
    processedImage = await getImage({
      src: defaultPostImage,
      alt: 'Default blog post image',
      width: 1200,
      height: 628,
    });
  }
}

//TODO: Description needs to be excerpt
const metadata: MetaSEO = {
  title: frontmatter?.title,
  description: frontmatter?.summary || frontmatter?.title,
  publication_url: frontmatter?.publication_url,
  image: processedImage,
};
---

<Layout {metadata}>
  <Announcement />
  <Header />

  <main>
    <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
      <h1 class="font-bold font-heading text-3xl md:text-4xl leading-tighter tracking-tighter">{frontmatter.title}</h1>
      <div
        class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
      >
        <slot />

        <!-- TODO: How to inject in the middle? -->
        <SupportBlock />
      </div>
    </section>
  </main>
  <Footer />
</Layout>
